<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:src="@drawable/ic_back_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_aloo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:src="@drawable/ic_icon_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_aloo">

        <TextView
            style="@style/TV.BottomSheet.list.item.img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/store_info" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@color/gray_line" />

        <ProgressBar
            android:id="@+id/loading_layout"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_30sdp"
            android:layout_weight="1"
            android:indeterminateTint="@color/text_color_red"
            android:visibility="gone" />

        <ScrollView
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/tajawal_500"
                    android:text="@string/store_info"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/_15sdp" />

                <com.prography.sw.alooproduct.custom.IconTextView
                    android:id="@+id/tv_legal_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:tv_image_rsc="@drawable/ic_name"
                    app:tv_style="@style/TV.Style"
                    app:tv_text="@string/legal_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/tajawal_300"
                    android:text="@string/according_to_commercial"
                    android:textColor="@color/text_color_dark_gray"
                    android:textSize="@dimen/_12sdp" />

                <com.prography.sw.alooproduct.custom.IconTextView
                    android:id="@+id/tv_trade_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:tv_image_rsc="@drawable/ic_name"
                    app:tv_style="@style/TV.Style"
                    app:tv_text="@string/trade_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/tajawal_300"
                    android:text="@string/name_shown_app"
                    android:textColor="@color/text_color_dark_gray"
                    android:textSize="@dimen/_12sdp" />

                <com.prography.sw.alooproduct.custom.IconTextView
                    android:id="@+id/tv_commercial_no"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:tv_image_rsc="@drawable/ic_commercial_no"
                    app:tv_style="@style/TV.Style"
                    app:tv_text="@string/commercial_no" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/frame_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_weight="1">

                        <com.prography.sw.alooproduct.custom.IconTextView
                            android:id="@+id/tv_type"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            app:tv_image_rsc="@drawable/ic_type"
                            app:tv_style="@style/TV.Style"
                            app:tv_text="@string/supermarkets" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:src="@drawable/ic_arrow_down_fill" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/frame_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_weight="1">

                        <com.prography.sw.alooproduct.custom.IconTextView
                            android:id="@+id/tv_city"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            app:tv_image_rsc="@drawable/ic_location"
                            app:tv_style="@style/TV.Style"
                            app:tv_text="@string/city" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:src="@drawable/ic_arrow_down_fill" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_restaurant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/frame_restaurant"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_weight="1">

                        <com.prography.sw.alooproduct.custom.IconTextView
                            android:id="@+id/tv_restaurant_type"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            app:tv_image_rsc="@drawable/ic_type"
                            app:tv_style="@style/TV.Style"
                            app:tv_text="@string/restaurant_type" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:src="@drawable/ic_arrow_down_fill" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/frame_kitchen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_weight="1">

                        <com.prography.sw.alooproduct.custom.IconTextView
                            android:id="@+id/tv_kitchen_type"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            app:tv_image_rsc="@drawable/ic_type"
                            app:tv_style="@style/TV.Style"
                            app:tv_text="@string/kitchen_type" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:src="@drawable/ic_arrow_down_fill" />
                    </FrameLayout>
                </LinearLayout>

                <com.prography.sw.alooproduct.custom.IconTextView
                    android:id="@+id/tv_store_description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:tv_image_rsc="@drawable/ic_name"
                    app:tv_style="@style/TV.Style"
                    app:tv_text="@string/store_description" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp">

                    <com.prography.sw.alooproduct.custom.IconTextView
                        android:id="@+id/tv_minimum_order"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        app:tv_image_rsc="@drawable/ic_name"
                        app:tv_style="@style/TV.Style"
                        app:tv_text="@string/minimum_order" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:fontFamily="@font/tajawal_400"
                        android:text="@string/SR_text"
                        android:textColor="@color/text_color_dark_light"
                        android:textSize="@dimen/_15sdp" />
                </FrameLayout>

                <com.prography.sw.alooproduct.custom.IconTextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:tv_image_rsc="@drawable/ic_email"
                    app:tv_style="@style/TV.Style"
                    app:tv_text="@string/formal_email" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/tajawal_500"
                    android:text="@string/delegated_manager_information"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/_15sdp" />

                <com.prography.sw.alooproduct.custom.IconTextView
                    android:id="@+id/tv_manager_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:tv_image_rsc="@drawable/ic_name"
                    app:tv_style="@style/TV.Style"
                    app:tv_text="@string/manager_name" />

                <com.prography.sw.alooproduct.custom.IconTextView
                    android:id="@+id/tv_manager_position"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:tv_image_rsc="@drawable/ic_commercial_no"
                    app:tv_style="@style/TV.Style"
                    app:tv_text="@string/manager_position" />

                <com.prography.sw.alooproduct.custom.IconTextView
                    android:id="@+id/tv_manager_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:tv_image_rsc="@drawable/ic_phone"
                    app:tv_style="@style/TV.Style"
                    app:tv_text="@string/manager_phone" />

                <com.prography.sw.alooproduct.custom.IconTextView
                    android:id="@+id/tv_manager_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    app:tv_image_rsc="@drawable/ic_email"
                    app:tv_style="@style/TV.Style"
                    app:tv_text="@string/manager_email" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>