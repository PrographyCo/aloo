<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlooDelevery" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <style name="myTV" parent="Widget.AppCompat.TextView">
        <item name="android:textColor"> @color/teal_700</item>
        <item name="android:textSize"> @dimen/_30sdp</item>
    </style>

    <style name="TV.BottomSheet.Text1" parent="Widget.AppCompat.TextView">
        <item name="android:textColor"> @color/black</item>
        <item name="android:textSize"> @dimen/_20sdp</item>
        <item name="android:fontFamily"> @font/tajawal_500</item>
    </style>

    <style name="TV.BottomSheet.Text2" parent="Widget.AppCompat.TextView">
        <item name="android:textColor"> @color/black</item>
        <item name="android:textSize"> @dimen/_18sdp</item>
        <item name="android:fontFamily"> @font/tajawal_400</item>
    </style>

    <style name="TV.BottomSheet.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor"> @color/text_color_red</item>
        <item name="android:textSize"> @dimen/_17sdp</item>
        <item name="android:fontFamily"> @font/tajawal_500</item>
    </style>

    <style name="TV.BottomSheet.list.item" parent="Widget.AppCompat.TextView">
        <item name="android:textColor"> @color/text_color_dark_gray</item>
        <item name="android:textSize"> @dimen/_15sdp</item>
        <item name="android:fontFamily"> @font/tajawal_400</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:background">@drawable/stroke_bottom_gray</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TV.BottomSheet.list.item.img" parent="Widget.AppCompat.TextView">
        <item name="android:textColor"> @color/text_color_dark_gray</item>
        <item name="android:textSize"> @dimen/_17sdp</item>
        <item name="android:fontFamily"> @font/tajawal_500</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TV.BottomSheet.list.item.radio" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor"> @color/text_color_dark_gray</item>
        <item name="android:textSize"> @dimen/_13sdp</item>
        <item name="android:fontFamily"> @font/tajawal_400</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
    </style>

    <style name="TV.BottomSheet.card.text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor"> @color/text_color_dark_gray</item>
        <item name="android:textSize"> @dimen/_13sdp</item>
        <item name="android:fontFamily"> @font/tajawal_400</item>
    </style>

    <style name="BTN" parent="Widget.AppCompat.Button">
        <item name="android:background"> @drawable/rounded_30_red_gradient</item>
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:layout_marginStart"> @dimen/_35sdp</item>
        <item name="android:layout_marginEnd"> @dimen/_35sdp</item>
        <item name="android:textColor"> @color/white</item>
        <item name="android:textSize"> @dimen/_17sdp</item>
        <item name="android:fontFamily"> @font/tajawal_500</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_top_30_white</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="TV.Style" parent="Widget.AppCompat.TextView">
        <item name="android:textColor"> @color/text_color_dark_light</item>
        <item name="android:textSize"> @dimen/_13sdp</item>
        <item name="android:fontFamily"> @font/tajawal_400</item>
    </style>

    <style name="ET.Style" parent="Widget.AppCompat.EditText">
        <item name="android:textColor"> @color/text_color_dark_gray</item>
        <item name="android:textSize"> @dimen/_13sdp</item>
        <item name="android:fontFamily"> @font/tajawal_400</item>
    </style>

    <style name="TV.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor"> @color/text_color_dark_gray</item>
        <item name="android:textSize"> @dimen/_15sdp</item>
        <item name="android:fontFamily"> @font/tajawal_500</item>
    </style>

    <style name="TV.Title.small" parent="Widget.AppCompat.TextView">
        <item name="android:textColor"> @color/text_color_dark_gray</item>
        <item name="android:textSize"> @dimen/_12sdp</item>
        <item name="android:fontFamily"> @font/tajawal_300</item>
    </style>

    <style name="TV.red.15.400" parent="Widget.AppCompat.TextView">
        <item name="android:textColor"> @color/text_color_red</item>
        <item name="android:textSize"> @dimen/_15sdp</item>
        <item name="android:fontFamily"> @font/tajawal_400</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray_line</item>
        <item name="colorControlActivated">@color/rate</item>
    </style>

</resources>